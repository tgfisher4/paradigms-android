<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16px"
    android:paddingRight="16px"
    android:paddingTop="16px"
    android:paddingBottom="16px"
    tools:context=".AboutActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/about_text"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Some info about Led Zeppelin and their lead guitarist"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About Led Zeppelin"
        android:id="@+id/open_webpage"
        app:layout_constraintTop_toBottomOf="@id/about_text"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guitarist Jimmy Page's Hometown"
        android:id="@+id/open_map"
        app:layout_constraintTop_toBottomOf="@id/open_webpage"
        />

</androidx.constraintlayout.widget.ConstraintLayout>